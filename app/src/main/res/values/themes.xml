<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tint_primary</item>
        <item name="colorPrimaryVariant">@color/tint_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tint_secondary</item>
        <item name="colorSecondaryVariant">@color/tint_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Location" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/surface_1</item>
        <item name="colorPrimaryVariant">@color/surface_2</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>




    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/CustomTextInputLayoutThemeOverlay</item>
        <item name="shapeAppearanceOverlay">@style/CustomTextInputLayoutShapeAppearanceOverlay</item>
        <item name="boxCollapsedPaddingTop">4dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="CustomTextInputLayoutThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/CustomTextInputLayoutEditTextStyle</item>
    </style>

    <style name="CustomTextInputLayoutEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- Padding values that total 34dp to visually match the spec. -->
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CustomTextInputLayoutShapeAppearanceOverlay" parent="">
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
    </style>
</resources>